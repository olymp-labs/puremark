{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "files": {
    "ignoreUnknown": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "a11y": {
        "noAutofocus": "info",
        "noLabelWithoutControl": "info",
        "noStaticElementInteractions": "info",
        "useButtonType": "info",
        "useKeyWithClickEvents": "info"
      },
      "correctness": {
        "noUnusedVariables": "off",
        "useExhaustiveDependencies": "info"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "indentStyle": "space",
      "lineWidth": 100
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  }
}
